<!doctype html>
<html lang="en">
<head>
  <h2>All Students</h2>
</head>

<body>
  <ul>
  <% @students.each do |student| %>
    <li class="student_<%= student.name %>">
      <%= student.name %>
      <%= link_to 'Delete', student_path(student), method: 'delete' %>
    </li>
  <% end %>
  </ul>
</body>
</html>
