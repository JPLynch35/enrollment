<!doctype html>
<html lang="en">
<head>
  <h2>Student: <%= @student.name %></h2>
</head>

<body>
  <h4>Student Courses:</h4>
  <ul>
  <% @student.courses.each do |course| %>
    <li>
      <%= course.title %>
    </li>
  <% end %>
  </ul>
  <h4>Student Addresses:</h4>
  <ul>
  <% @student.addresses.each do |address| %>
    <li>
      <%= address.description %>
      <%= address.street %>
      <%= address.city %>
      <%= address.state %>
      <%= address.zipcode %>
    </li>
  <% end %>
  </ul>
</body>
</html>
